# Microsoft Foundry Configuration
# Copy this file to .env and fill in your values
# NEVER commit your .env file to version control!

# ============================================
# OPTION 1: Project Connection String (Recommended)
# ============================================
# Find this in AI Foundry portal (ai.azure.com):
# Project settings → Project properties → "Project connection string"
AZURE_AI_PROJECT_CONNECTION_STRING=

# ============================================
# OPTION 2: Individual Settings
# ============================================
# Use these if you prefer not to use the connection string
# AZURE_SUBSCRIPTION_ID=your-subscription-id
# AZURE_RESOURCE_GROUP=your-resource-group
# AZURE_AI_PROJECT_NAME=your-project-name

# ============================================
# Model Configuration
# ============================================
# The deployment name of your model (from Project → Deployments)
AZURE_AI_MODEL_DEPLOYMENT=gpt-4o

# ============================================
# Optional Settings
# ============================================
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
